# Docker Environment Configuration for Pathfinder

# MySQL Configuration
MYSQL_ROOT_PASSWORD=pathfinder_root
MYSQL_USER=pathfinder
MYSQL_PASSWORD=pathfinder_pass
MYSQL_PORT=3306
MYSQL_UNIVERSE_PORT=3307

# Redis Configuration
REDIS_PASSWORD=pathfinder_redis
REDIS_PORT=6379

# Application Configuration
APP_PORT=8080
APP_STATUS_PORT=2114
DEBUG=3

# Application URL (for development)
APP_URL=http://localhost:8080

# CCP SSO Configuration
# Get these from: https://developers.eveonline.com/applications
CCP_SSO_URL=https://login.eveonline.com
CCP_SSO_CLIENT_ID=your_client_id_here
CCP_SSO_SECRET_KEY=your_secret_key_here

# CCP ESI Configuration
CCP_ESI_URL=https://esi.evetech.net
CCP_ESI_DATASOURCE=tranquility
